FROM node:20-bookworm-slim AS deps
WORKDIR /usr/src/app

RUN apt-get update && apt-get install -y --no-install-recommends \
  python3 make g++ ca-certificates openssl \
  && rm -rf /var/lib/apt/lists/*

COPY package.json package-lock.json ./

COPY turbo.json tsconfig.json ./
COPY apps/user-app/package.json ./apps/user-app/package.json
COPY apps/mock-payment-gateway/package.json ./apps/mock-payment-gateway/package.json
COPY apps/bank-webhook/package.json ./apps/bank-webhook/package.json
COPY packages ./packages

RUN npm ci


FROM node:20-bookworm-slim AS builder
WORKDIR /usr/src/app

ARG DATABASE_URL="postgresql://postgres:prisma@127.0.0.1:5432/vaultly?schema=public"
ENV DATABASE_URL=$DATABASE_URL

COPY --from=deps /usr/src/app/node_modules ./node_modules
COPY . .

RUN npm run db:generate
RUN npm run build:user-app


FROM node:20-bookworm-slim AS runner
WORKDIR /usr/src/app

ENV NODE_ENV=production
ENV PORT=3001

COPY --from=builder /usr/src/app/package.json ./package.json
COPY --from=builder /usr/src/app/package-lock.json ./package-lock.json
COPY --from=builder /usr/src/app/node_modules ./node_modules
COPY --from=builder /usr/src/app/apps/user-app ./apps/user-app
COPY --from=builder /usr/src/app/packages ./packages

EXPOSE 3001
CMD ["npm", "run", "start-user-app"]
