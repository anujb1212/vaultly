{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NEXTAUTH_SECRET",
    "JWT_SECRET",
    "REDIS_URL",
    "APP_URL",
    "RESEND_API_KEY",
    "RESEND_FROM",
    "GEMINI_MODEL",
    "GOOGLE_API_KEY",
    "GEMINI_API_KEY",
    "AI_USER_DAILY_CAP",
    "AI_GLOBAL_DAILY_CAP",
    "ADMIN_API_TOKEN",
    "GATEWAY_API_TOKEN",
    "BRIDGE_SECRET",
    "ARBITIUM_SYSTEM_USER_ID",
    "NEXT_PUBLIC_ARBITIUM_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXTAUTH_SECRET",
        "JWT_SECRET"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}